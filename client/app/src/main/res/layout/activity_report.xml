<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="team.enlighten.rexcited.ReportActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_share"
        android:id="@+id/linearLayout2">

        <ImageView
            android:id="@+id/img_star_1"
            android:layout_width="@dimen/star_size"
            android:layout_height="@dimen/star_size"
            android:src="@drawable/ic_empty_star"
            android:tint="#ff0000" />

        <ImageView
            android:id="@+id/img_star_2"
            android:layout_width="@dimen/star_size"
            android:layout_height="@dimen/star_size"
            android:src="@drawable/ic_empty_star"
            android:tint="#ff0000" />

        <ImageView
            android:id="@+id/img_star_3"
            android:layout_width="@dimen/star_size"
            android:layout_height="@dimen/star_size"
            android:src="@drawable/ic_empty_star"
            android:tint="#ff0000" />

        <ImageView
            android:id="@+id/img_star_4"
            android:layout_width="@dimen/star_size"
            android:layout_height="@dimen/star_size"
            android:src="@drawable/ic_empty_star"
            android:tint="#ff0000" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_upload"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_upload"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="16dp" />

    <ImageButton
        android:id="@+id/btn_share"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="16dp"
        android:background="@null"
        app:layout_constraintRight_toLeftOf="@+id/btn_upload"
        app:layout_constraintTop_toTopOf="@+id/btn_upload"
        android:src="@drawable/ic_share"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/btn_upload"
        android:layout_marginEnd="16dp" />


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:text="@string/accuracy"
            app:layout_constraintLeft_toLeftOf="@+id/img_accuracy"
            app:layout_constraintRight_toRightOf="@+id/img_accuracy"
            app:layout_constraintTop_toBottomOf="@+id/img_accuracy" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="@string/fluency"
            app:layout_constraintLeft_toLeftOf="@+id/img_fluency"
            app:layout_constraintRight_toRightOf="@+id/img_fluency"
            app:layout_constraintTop_toBottomOf="@id/img_fluency"
            tools:layout_conversion_absoluteHeight="92dp"
            tools:layout_conversion_absoluteWidth="144dp"
            tools:layout_conversion_absoluteX="36dp"
            tools:layout_conversion_absoluteY="467dp" />

        <TextView
            android:id="@+id/pct_fluency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#ffee58"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_fluency"
            app:layout_constraintLeft_toLeftOf="@+id/img_fluency"
            app:layout_constraintRight_toRightOf="@+id/img_fluency"
            app:layout_constraintTop_toTopOf="@+id/img_fluency"
            tools:layout_conversion_absoluteHeight="42dp"
            tools:layout_conversion_absoluteWidth="40dp"
            tools:layout_conversion_absoluteX="79dp"
            tools:layout_conversion_absoluteY="306dp" />

        <TextView
            android:id="@+id/pct_accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#42a5f5"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_accuracy"
            app:layout_constraintLeft_toLeftOf="@+id/img_accuracy"
            app:layout_constraintRight_toRightOf="@+id/img_accuracy"
            app:layout_constraintTop_toTopOf="@+id/img_accuracy"
            tools:layout_conversion_absoluteHeight="42dp"
            tools:layout_conversion_absoluteWidth="40dp"
            tools:layout_conversion_absoluteX="239dp"
            tools:layout_conversion_absoluteY="306dp" />

        <ImageView
            android:id="@+id/img_accuracy"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_circle"
            android:tint="#42a5f5"
            app:layout_constraintBottom_toBottomOf="@+id/img_fluency"
            app:layout_constraintLeft_toRightOf="@+id/img_fluency"
            app:layout_constraintTop_toTopOf="@+id/img_fluency"
            tools:layout_conversion_absoluteHeight="128dp"
            tools:layout_conversion_absoluteWidth="128dp"
            tools:layout_conversion_absoluteX="196dp"
            tools:layout_conversion_absoluteY="263dp"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/img_fluency"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_circle"
            android:tint="#ffee58"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="128dp"
            tools:layout_conversion_absoluteWidth="128dp"
            tools:layout_conversion_absoluteX="36dp"
            tools:layout_conversion_absoluteY="263dp" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
